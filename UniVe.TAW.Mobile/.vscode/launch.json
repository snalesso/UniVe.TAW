    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run android on emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "emulator",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "ServerAddress:": "10.0.2.2"
            }
        },
        {
            "name": "Serve to the browser (ionic serve)",
            "type": "cordova",
            "request": "launch",
            "platform": "serve",
            "devServerAddress": "localhost",
            "port": 8100,
            "sourceMaps": true,
            "ionicLiveReload": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "ServerAddress:": "127.0.0.1"
            }
        }
    ]
}