{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "identifier": "transpile",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "identifier": "export",
            "label": "Export .ts used by other libraries",
            "command": "gulp",
            "args": [
                "export"
            ],
            "type": "shell",
            "dependsOn": "transpile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}